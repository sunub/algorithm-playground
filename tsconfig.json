{
    "compilerOptions": {
        "target": "ES2022",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "isolatedModules": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "dist"
    },
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "rootDir": "."
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
